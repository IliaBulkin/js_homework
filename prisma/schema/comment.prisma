model Comment {
  id          Int      @id @default(autoincrement())  
  description String
  image       String?
  contact     String
  postId      Int      // ссылка на Post
  userId      Int      // ссылка на User
  post        Post     @relation(fields: [postId], references: [id]) // обратная связь с Post
  user        User     @relation("UserComments", fields: [userId], references: [id]) // обратная связь с User
}